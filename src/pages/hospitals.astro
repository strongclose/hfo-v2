---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
import { HospitalCard } from '../components/HospitalCard';
---

<Layout title="Hospitals - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Hospital Directory</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Find hospitals in your area and compare their pricing for various procedures.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <!-- Hospital cards will be populated here -->
          <div class="p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold mb-2">Hospital listings coming soon</h3>
            <p class="text-gray-600">We're working on populating our hospital directory.</p>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
