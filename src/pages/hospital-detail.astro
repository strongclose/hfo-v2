---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Hospital Details - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-4">Hospital Details</h1>
          <p class="text-lg text-gray-700">
            View detailed information about a specific hospital including pricing, quality ratings, and services.
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div class="lg:col-span-2">
            <div class="bg-white border rounded-lg p-6 mb-6">
              <h2 class="text-2xl font-semibold mb-4">Hospital Information</h2>
              <div class="space-y-4">
                <div>
                  <h3 class="font-medium text-gray-900">Address</h3>
                  <p class="text-gray-600">Select a hospital to view details</p>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">Phone</h3>
                  <p class="text-gray-600">Contact information will appear here</p>
                </div>
                <div>
                  <h3 class="font-medium text-gray-900">Services</h3>
                  <p class="text-gray-600">Available services and specialties</p>
                </div>
              </div>
            </div>
            
            <div class="bg-white border rounded-lg p-6">
              <h2 class="text-2xl font-semibold mb-4">Procedure Pricing</h2>
              <p class="text-gray-600 mb-4">
                Compare pricing for common procedures at this hospital.
              </p>
              <div class="space-y-3">
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
                  <span>MRI Brain Scan</span>
                  <span class="font-medium">Price varies by insurance</span>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
                  <span>CT Scan</span>
                  <span class="font-medium">Price varies by insurance</span>
                </div>
                <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
                  <span>Blood Test Panel</span>
                  <span class="font-medium">Price varies by insurance</span>
                </div>
              </div>
            </div>
          </div>
          
          <div>
            <div class="bg-white border rounded-lg p-6 mb-6">
              <h3 class="text-lg font-semibold mb-4">Quality Ratings</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span>Overall Rating</span>
                  <span class="text-yellow-600">★★★★☆</span>
                </div>
                <div class="flex justify-between">
                  <span>Patient Safety</span>
                  <span class="text-green-600">★★★★★</span>
                </div>
                <div class="flex justify-between">
                  <span>Patient Experience</span>
                  <span class="text-yellow-600">★★★★☆</span>
                </div>
              </div>
            </div>
            
            <div class="bg-white border rounded-lg p-6">
              <h3 class="text-lg font-semibold mb-4">Quick Actions</h3>
              <div class="space-y-3">
                <a href="/compare-prices" class="block w-full bg-blue-600 text-white text-center py-2 rounded hover:bg-blue-700 transition-colors">
                  Compare Prices
                </a>
                <a href="#" class="block w-full bg-gray-100 text-gray-700 text-center py-2 rounded hover:bg-gray-200 transition-colors">
                  View Reviews
                </a>
                <a href="#" class="block w-full bg-gray-100 text-gray-700 text-center py-2 rounded hover:bg-gray-200 transition-colors">
                  Get Directions
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
