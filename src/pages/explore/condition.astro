---
import Layout from '../../layouts/BaseLayout.astro';
import { Navigation } from '../../components/Navigation';
import { FooterExpanded } from '../../components/homepage/FooterExpanded';
---

<Layout title="Explore by Condition - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Explore Healthcare by Medical Condition</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Find treatment options and costs for specific medical conditions and diagnoses.
          </p>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-4">Search by Condition</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Medical Condition</label>
              <input 
                type="text" 
                placeholder="e.g., Diabetes, Heart Disease" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Treatment Type</label>
              <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>All Treatments</option>
                <option>Diagnostic Tests</option>
                <option>Medications</option>
                <option>Surgical Procedures</option>
                <option>Therapy/Rehabilitation</option>
              </select>
            </div>
            <div class="flex items-end">
              <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                Search Conditions
              </button>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-red-600">Cardiovascular Conditions</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Heart Disease</a></li>
              <li><a href="#" class="hover:text-blue-600">High Blood Pressure</a></li>
              <li><a href="#" class="hover:text-blue-600">Arrhythmia</a></li>
              <li><a href="#" class="hover:text-blue-600">Heart Attack</a></li>
              <li><a href="#" class="hover:text-blue-600">Stroke</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-blue-600">Endocrine Conditions</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Diabetes Type 1</a></li>
              <li><a href="#" class="hover:text-blue-600">Diabetes Type 2</a></li>
              <li><a href="#" class="hover:text-blue-600">Thyroid Disorders</a></li>
              <li><a href="#" class="hover:text-blue-600">Obesity</a></li>
              <li><a href="#" class="hover:text-blue-600">Metabolic Syndrome</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-green-600">Cancer Conditions</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Breast Cancer</a></li>
              <li><a href="#" class="hover:text-blue-600">Lung Cancer</a></li>
              <li><a href="#" class="hover:text-blue-600">Colon Cancer</a></li>
              <li><a href="#" class="hover:text-blue-600">Prostate Cancer</a></li>
              <li><a href="#" class="hover:text-blue-600">Skin Cancer</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-purple-600">Mental Health</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Depression</a></li>
              <li><a href="#" class="hover:text-blue-600">Anxiety Disorders</a></li>
              <li><a href="#" class="hover:text-blue-600">ADHD</a></li>
              <li><a href="#" class="hover:text-blue-600">Bipolar Disorder</a></li>
              <li><a href="#" class="hover:text-blue-600">PTSD</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-orange-600">Musculoskeletal</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Arthritis</a></li>
              <li><a href="#" class="hover:text-blue-600">Back Pain</a></li>
              <li><a href="#" class="hover:text-blue-600">Osteoporosis</a></li>
              <li><a href="#" class="hover:text-blue-600">Sports Injuries</a></li>
              <li><a href="#" class="hover:text-blue-600">Joint Replacement</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
            <h3 class="text-lg font-semibold mb-3 text-teal-600">Chronic Conditions</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Kidney Disease</a></li>
              <li><a href="#" class="hover:text-blue-600">COPD</a></li>
              <li><a href="#" class="hover:text-blue-600">Asthma</a></li>
              <li><a href="#" class="hover:text-blue-600">Fibromyalgia</a></li>
              <li><a href="#" class="hover:text-blue-600">Autoimmune Disorders</a></li>
            </ul>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-semibold mb-6">Understanding Treatment Costs by Condition</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg p-6">
              <h3 class="text-lg font-semibold mb-3">Diagnostic Phase</h3>
              <p class="text-gray-700">
                Initial testing, imaging, and specialist consultations to diagnose 
                and stage the condition properly.
              </p>
            </div>
            
            <div class="bg-white rounded-lg p-6">
              <h3 class="text-lg font-semibold mb-3">Treatment Phase</h3>
              <p class="text-gray-700">
                Primary treatment costs including procedures, medications, 
                and ongoing care management.
              </p>
            </div>
            
            <div class="bg-white rounded-lg p-6">
              <h3 class="text-lg font-semibold mb-3">Follow-up Care</h3>
              <p class="text-gray-700">
                Long-term monitoring, preventive care, and management 
                to prevent complications.
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
