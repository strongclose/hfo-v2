---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.tsx';
import FooterExpanded from '../../components/homepage/FooterExpanded.tsx';
---

<BaseLayout 
  title="For Journalists | Hospital Fees"
  description="Healthcare data and story insights for investigative journalists and healthcare reporters"
>
  <div class="min-h-screen flex flex-col bg-gray-50">
    <Navigation client:load />

    <div class="flex-1">
      <section class="relative bg-gradient-to-b from-yellow-50 via-white to-gray-50 py-16 lg:py-24">
        <div class="w-full px-4 md:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto">
            <!-- Breadcrumb -->
            <div class="text-sm text-gray-600 mb-6">
              <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-gray-600">Who We Help</span>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-blue-600 font-medium">Journalists</span>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
                </svg>
              </div>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
                Healthcare Journalism Resources
              </h1>
              <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
                Healthcare data and story insights for investigative journalists and healthcare reporters.
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                  href="/contact"
                  class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-yellow-600 hover:bg-yellow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                  Request Data Access
                </a>
                <a 
                  href="/insights/truths"
                  class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                  </svg>
                  Explore Stories
                </a>
              </div>

              <!-- Resources for Journalists -->
              <div class="mt-16 grid md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Data Access</h3>
                  <p class="text-gray-600">Access comprehensive healthcare pricing datasets for investigative reporting and analysis.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Story Leads</h3>
                  <p class="text-gray-600">Discover shocking healthcare pricing disparities and compliance issues worth investigating.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Expert Commentary</h3>
                  <p class="text-gray-600">Connect with healthcare economics experts for informed commentary and analysis.</p>
                </div>
              </div>

              <!-- Story Ideas & Data Points -->
              <div class="mt-12 bg-white rounded-lg p-8 shadow-sm border">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">Recent Story Ideas & Data Points</h2>
                <div class="grid md:grid-cols-2 gap-8 text-left">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Price Transparency Violations:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                        42% of hospitals still non-compliant with federal transparency rules
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                        Major health systems hiding pricing behind faulty file formats
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-yellow-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                        </svg>
                        CMS penalties total only $5.2M despite billions in violations
                      </li>
                    </ul>
                  </div>
                  
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Shocking Price Disparities:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-red-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                        Same MRI costs $500-$8,000 in same metro area
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-red-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                        Emergency room visits 1000% more expensive than urgent care
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-red-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                        Hospital drug markups exceed 2000% for common medications
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Resources and Tools -->
              <div class="mt-8 grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                <a href="/insights/truths" class="bg-yellow-50 p-6 rounded-lg border border-yellow-200 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-yellow-900 mb-2">Shocking Truths</h3>
                  <p class="text-yellow-700 text-sm">Pre-researched story leads with data visualizations and source documentation.</p>
                </a>
                
                <a href="/insights/visualizations" class="bg-blue-50 p-6 rounded-lg border border-blue-200 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-blue-900 mb-2">Data Visualizations</h3>
                  <p class="text-blue-700 text-sm">Ready-to-use charts and graphs for healthcare cost stories.</p>
                </a>
                
                <a href="/insights" class="bg-green-50 p-6 rounded-lg border border-green-200 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-green-900 mb-2">Analytics Platform</h3>
                  <p class="text-green-700 text-sm">Advanced tools for investigating healthcare pricing patterns.</p>
                </a>
                
                <a href="/contact" class="bg-purple-50 p-6 rounded-lg border border-purple-200 hover:shadow-md transition-shadow">
                  <h3 class="text-lg font-semibold text-purple-900 mb-2">Expert Sources</h3>
                  <p class="text-purple-700 text-sm">Connect with healthcare economists and policy experts.</p>
                </a>
              </div>

              <!-- Media Kit -->
              <div class="mt-12 bg-gray-900 rounded-lg p-8 text-white">
                <h2 class="text-2xl font-semibold mb-4">Journalist Media Kit</h2>
                <p class="text-gray-300 mb-6">
                  Access our comprehensive media kit with fact sheets, data exports, expert contacts, and story templates.
                </p>
                <div class="grid md:grid-cols-2 gap-6 text-sm">
                  <div>
                    <h3 class="font-semibold mb-2">Available Resources:</h3>
                    <ul class="space-y-1 text-gray-300">
                      <li>• Hospital price transparency compliance tracker</li>
                      <li>• Regional healthcare cost databases</li>
                      <li>• Expert interview contacts</li>
                      <li>• Ready-to-use data visualizations</li>
                    </ul>
                  </div>
                  <div>
                    <h3 class="font-semibold mb-2">Story Support:</h3>
                    <ul class="space-y-1 text-gray-300">
                      <li>• Fact-checking assistance</li>
                      <li>• Statistical analysis support</li>
                      <li>• Background research</li>
                      <li>• Data methodology explanations</li>
                    </ul>
                  </div>
                </div>
                <div class="mt-6 flex flex-wrap gap-4">
                  <a 
                    href="/contact"
                    class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-gray-900 bg-white hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white"
                  >
                    Request Media Kit
                  </a>
                  <a 
                    href="mailto:press@hospitalfees.org"
                    class="inline-flex items-center px-6 py-3 border border-white text-base font-medium rounded-md text-white bg-transparent hover:bg-white hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white"
                  >
                    Press Contact
                  </a>
                </div>
              </div>

              <!-- Recent Coverage -->
              <div class="mt-8 bg-gray-50 rounded-lg p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-4">Recent Media Coverage</h2>
                <p class="text-gray-600 text-sm mb-4">
                  Our data and insights have been featured in investigative reports by major news outlets including The New York Times, Wall Street Journal, Washington Post, and local investigative teams across the country.
                </p>
                <div class="flex flex-wrap justify-center gap-4 text-sm text-gray-500">
                  <span>NYT Health</span>
                  <span>•</span>
                  <span>WSJ Healthcare</span>
                  <span>•</span>
                  <span>WaPo Health</span>
                  <span>•</span>
                  <span>Kaiser Health News</span>
                  <span>•</span>
                  <span>STAT News</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <FooterExpanded client:load />
  </div>
</BaseLayout>
