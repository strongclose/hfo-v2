---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.tsx';
import FooterExpanded from '../../components/homepage/FooterExpanded.tsx';
---

<BaseLayout 
  title="For Insurance Providers | Hospital Fees"
  description="Network analytics and cost management tools for insurance companies and health plans"
>
  <div class="min-h-screen flex flex-col bg-gray-50">
    <Navigation client:load />

    <div class="flex-1">
      <section class="relative bg-gradient-to-b from-indigo-50 via-white to-gray-50 py-16 lg:py-24">
        <div class="w-full px-4 md:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto">
            <!-- Breadcrumb -->
            <div class="text-sm text-gray-600 mb-6">
              <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-gray-600">Who We Help</span>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-blue-600 font-medium">Insurance Providers</span>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-indigo-100 rounded-lg flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              </div>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
                Insurance Network Analytics
              </h1>
              <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
                Network analytics and cost management tools for insurance companies and health plans.
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                  href="/provider-feedback"
                  class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                  Request Analytics Demo
                </a>
                <a 
                  href="/contact"
                  class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                  </svg>
                  Contact Sales
                </a>
              </div>

              <!-- Analytics Solutions -->
              <div class="mt-16 grid md:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Network Optimization</h3>
                  <p class="text-gray-600">Optimize your provider networks using comprehensive cost and quality data analysis.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Cost Management</h3>
                  <p class="text-gray-600">Identify cost-saving opportunities and negotiate better rates with providers using market data.</p>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Member Guidance</h3>
                  <p class="text-gray-600">Empower members with cost transparency tools to make informed healthcare decisions.</p>
                </div>
              </div>

              <!-- Key Features -->
              <div class="mt-12 bg-white rounded-lg p-8 shadow-sm border">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">Platform Capabilities</h2>
                <div class="grid md:grid-cols-2 gap-8 text-left">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Analytics & Insights:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Provider performance benchmarking
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Claims cost analysis and trends
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Network adequacy assessments
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Regional market comparisons
                      </li>
                    </ul>
                  </div>
                  
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Member Tools:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Cost estimation calculators
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Provider quality ratings
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Personalized recommendations
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-blue-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Mobile-friendly interfaces
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- ROI Benefits -->
              <div class="mt-8 grid md:grid-cols-3 gap-6">
                <div class="bg-indigo-50 p-6 rounded-lg border border-indigo-200">
                  <div class="text-2xl font-bold text-indigo-600 mb-2">15-25%</div>
                  <h3 class="text-lg font-semibold text-indigo-900 mb-2">Cost Reduction</h3>
                  <p class="text-indigo-700 text-sm">Average reduction in medical costs through better provider selection and network optimization.</p>
                </div>
                <div class="bg-green-50 p-6 rounded-lg border border-green-200">
                  <div class="text-2xl font-bold text-green-600 mb-2">40%</div>
                  <h3 class="text-lg font-semibold text-green-900 mb-2">Member Engagement</h3>
                  <p class="text-green-700 text-sm">Increase in member engagement with cost transparency tools and provider selection.</p>
                </div>
                <div class="bg-blue-50 p-6 rounded-lg border border-blue-200">
                  <div class="text-2xl font-bold text-blue-600 mb-2">90%</div>
                  <h3 class="text-lg font-semibold text-blue-900 mb-2">Member Satisfaction</h3>
                  <p class="text-blue-700 text-sm">Of members report improved satisfaction with cost transparency and provider information.</p>
                </div>
              </div>

              <!-- Use Cases -->
              <div class="mt-12 bg-gray-50 rounded-lg p-8">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">Common Use Cases</h2>
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                  <div class="text-center">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                      </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Network Analysis</h3>
                    <p class="text-sm text-gray-600">Evaluate provider performance and network gaps</p>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                      </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Contract Negotiations</h3>
                    <p class="text-sm text-gray-600">Leverage market data for better rates</p>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Member Steerage</h3>
                    <p class="text-sm text-gray-600">Guide members to high-value providers</p>
                  </div>
                  
                  <div class="text-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-3">
                      <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                      </svg>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Quality Assurance</h3>
                    <p class="text-sm text-gray-600">Monitor provider quality metrics</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <FooterExpanded client:load />
  </div>
</BaseLayout>
