---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.tsx';
import FooterExpanded from '../../components/homepage/FooterExpanded.tsx';
---

<BaseLayout 
  title="Financial Tools for Healthcare | Hospital Fees"
  description="Access calculators and financial planning tools to manage your healthcare costs effectively"
>
  <div class="min-h-screen flex flex-col bg-gray-50">
    <Navigation client:load />

    <div class="flex-1">
      <section class="relative bg-gradient-to-b from-emerald-50 via-white to-gray-50 py-16 lg:py-24">
        <div class="w-full px-4 md:px-6 lg:px-8">
          <div class="max-w-7xl mx-auto">
            <!-- Breadcrumb -->
            <div class="text-sm text-gray-600 mb-6">
              <a href="/" class="hover:text-blue-600 transition-colors">Home</a>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-gray-600">Who We Help</span>
              <svg class="w-4 h-4 inline mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
              <span class="text-blue-600 font-medium">Financial Tools</span>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-emerald-100 rounded-lg flex items-center justify-center mx-auto mb-6">
                <svg class="w-8 h-8 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 0l-6-6m6 6l-6 6m6 3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-gray-900">
                Healthcare Financial Tools
              </h1>
              <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
                Access calculators and financial planning tools to manage your healthcare costs effectively.
              </p>
              
              <!-- CTA Buttons -->
              <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a 
                  href="/tools/cost-calculator"
                  class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 0l-6-6m6 6l-6 6m6 3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Cost Calculator
                </a>
                <a 
                  href="/tools"
                  class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500"
                >
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                  </svg>
                  All Tools
                </a>
              </div>

              <!-- Available Tools -->
              <div class="mt-16 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 0l-6-6m6 6l-6 6m6 3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Cost Calculator</h3>
                  <p class="text-gray-600">Estimate healthcare procedure costs and out-of-pocket expenses based on your insurance.</p>
                  <a href="/tools/cost-calculator" class="inline-block mt-4 text-emerald-600 hover:text-emerald-700 font-medium">Use Calculator →</a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Savings Estimator</h3>
                  <p class="text-gray-600">Compare prices across providers to identify potential savings opportunities.</p>
                  <a href="/tools/savings-estimator" class="inline-block mt-4 text-blue-600 hover:text-blue-700 font-medium">Estimate Savings →</a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">HSA/FSA Planner</h3>
                  <p class="text-gray-600">Plan your Health Savings Account or Flexible Spending Account contributions.</p>
                  <a href="/tools/hsa-planner" class="inline-block mt-4 text-purple-600 hover:text-purple-700 font-medium">Plan Contributions →</a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Budget Tracker</h3>
                  <p class="text-gray-600">Track your healthcare spending and monitor progress towards deductibles.</p>
                  <a href="/tools/budget-tracker" class="inline-block mt-4 text-yellow-600 hover:text-yellow-700 font-medium">Track Spending →</a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Insurance Analyzer</h3>
                  <p class="text-gray-600">Analyze insurance plans to understand coverage and choose the best option.</p>
                  <a href="/tools/insurance-analyzer" class="inline-block mt-4 text-indigo-600 hover:text-indigo-700 font-medium">Analyze Plans →</a>
                </div>

                <div class="bg-white p-6 rounded-lg shadow-sm border">
                  <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-4">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-2">Bill Checker</h3>
                  <p class="text-gray-600">Upload and analyze medical bills to identify potential errors or overcharges.</p>
                  <a href="/tools/bill-checker" class="inline-block mt-4 text-red-600 hover:text-red-700 font-medium">Check Bills →</a>
                </div>
              </div>

              <!-- Financial Tips -->
              <div class="mt-12 bg-white rounded-lg p-8 shadow-sm border">
                <h2 class="text-2xl font-semibold text-gray-900 mb-6">Healthcare Financial Tips</h2>
                <div class="grid md:grid-cols-2 gap-8 text-left">
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">Before Treatment:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Get upfront cost estimates from providers
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Verify insurance coverage and benefits
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Compare prices across multiple providers
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Ask about payment plans or discounts
                      </li>
                    </ul>
                  </div>
                  
                  <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-3">After Treatment:</h3>
                    <ul class="space-y-2 text-gray-600">
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Review bills carefully for errors
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Negotiate payment plans if needed
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Track expenses for tax purposes
                      </li>
                      <li class="flex items-start">
                        <svg class="w-5 h-5 text-green-500 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Save receipts for HSA/FSA reimbursement
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <FooterExpanded client:load />
  </div>
</BaseLayout>
