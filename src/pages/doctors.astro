---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Doctors - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Find Doctors</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Search for healthcare providers and compare their pricing for various procedures.
          </p>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-4">Doctor Search</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Specialty</label>
              <input 
                type="text" 
                placeholder="e.g., Cardiology, Orthopedics" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
              <input 
                type="text" 
                placeholder="City, State or ZIP" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="flex items-end">
              <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                Search Doctors
              </button>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold mb-2">Doctor Directory</h3>
            <p class="text-gray-600 mb-4">Browse healthcare providers by specialty and location.</p>
            <a href="#" class="text-blue-600 hover:text-blue-800">Browse All Doctors →</a>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold mb-2">Price Comparisons</h3>
            <p class="text-gray-600 mb-4">Compare procedure costs across different providers.</p>
            <a href="/compare-prices" class="text-blue-600 hover:text-blue-800">Compare Prices →</a>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-lg">
            <h3 class="text-lg font-semibold mb-2">Reviews & Ratings</h3>
            <p class="text-gray-600 mb-4">Read patient reviews and quality ratings.</p>
            <a href="#" class="text-blue-600 hover:text-blue-800">View Reviews →</a>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
