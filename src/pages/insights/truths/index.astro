---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navigation from '../../../components/Navigation.tsx';
import FooterExpanded from '../../../components/homepage/FooterExpanded.tsx';

// Mock shocking truths data
const truths = [
  {
    id: "1",
    slug: "er-visits-cost-10x-more-at-same-hospital",
    title: "ER Visits Cost 10x More at Same Hospital vs Urgent Care",
    description: "Emergency room visits for non-emergency conditions can cost patients 10 times more than identical care at urgent care centers, even within the same hospital system.",
    publishedDate: "2024-03-15",
    readingTime: 5,
    procedureTags: ["Emergency Care", "Urgent Care", "Minor Procedures"],
    regionTags: ["California", "Bay Area"],
    featured: true,
  },
  {
    id: "2",
    slug: "hospital-charges-vs-insurance-payments",
    title: "Hospital Charges vs What Insurance Actually Pays",
    description: "The shocking difference between what hospitals charge and what insurance companies actually pay reveals the complex world of healthcare pricing.",
    publishedDate: "2024-03-10",
    readingTime: 4,
    procedureTags: ["Billing", "Insurance", "Price Variations"],
    regionTags: ["National"],
    featured: true,
  },
  {
    id: "3",
    slug: "outpatient-surgery-costs-by-location",
    title: "Outpatient Surgery Costs: Location Makes All the Difference",
    description: "The same outpatient procedure can cost 5x more depending on where you get it done, even within the same insurance network.",
    publishedDate: "2024-03-05",
    readingTime: 6,
    procedureTags: ["Surgery", "Outpatient", "Location"],
    regionTags: ["California", "Texas", "New York"],
    featured: false,
  },
  {
    id: "4",
    slug: "prescription-drug-markup-hospitals",
    title: "Hospital Prescription Drug Markups Reach 1000%",
    description: "Hospitals charge patients up to 10x what they pay for common medications, creating massive profit margins on essential drugs.",
    publishedDate: "2024-02-28",
    readingTime: 5,
    procedureTags: ["Prescription Drugs", "Markups", "Hospital Fees"],
    regionTags: ["National"],
    featured: false,
  },
  {
    id: "5",
    slug: "mri-pricing-wild-variations",
    title: "MRI Pricing: 400% Variations in Same City",
    description: "Our analysis reveals that MRI costs can vary by over 400% within the same metropolitan area, with identical scans ranging from $500 to $2,500.",
    publishedDate: "2024-02-20",
    readingTime: 7,
    procedureTags: ["MRI", "Imaging", "Price Variations"],
    regionTags: ["California", "Los Angeles"],
    featured: true,
  },
  {
    id: "6",
    slug: "hidden-facility-fees-surprise-bills",
    title: "Hidden Facility Fees Lead to Surprise Bills",
    description: "Even with insurance, patients are getting hit with unexpected facility fees that can add hundreds or thousands to their medical bills.",
    publishedDate: "2024-02-15",
    readingTime: 4,
    procedureTags: ["Facility Fees", "Surprise Bills", "Insurance"],
    regionTags: ["National"],
    featured: false,
  },
];

const featuredTruths = truths.filter(truth => truth.featured);
const allRegions = [...new Set(truths.flatMap(t => t.regionTags))].sort();

// Categories for filtering
const categories = [
  "Price Variations",
  "Billing & Fees", 
  "Insurance Issues",
  "Emergency Care",
  "Imaging",
  "Surgery"
];
---

<BaseLayout 
  title="Shocking Healthcare Truths - Price Transparency Insights | Hospital Fees"
  description="Discover shocking truths about healthcare pricing. Uncover hidden fees, price variations, and billing practices that impact your medical costs."
>
  <div class="min-h-screen bg-gray-50">
    <Navigation client:load />

    <!-- Hero Section -->
    <div class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="text-center max-w-3xl mx-auto">
          <nav class="flex items-center justify-center space-x-2 text-sm text-gray-600 mb-6">
            <a href="/insights" class="hover:text-blue-600">Insights</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            <span class="text-gray-900">Shocking Truths</span>
          </nav>

          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Shocking Healthcare Truths
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Uncovering hidden fees, price variations, and billing practices that impact your healthcare costs.
          </p>

          <!-- Search Bar -->
          <div class="relative max-w-2xl mx-auto">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <input
              type="text"
              placeholder="Search shocking truths..."
              class="w-full pl-10 pr-4 py-3 text-lg border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Featured Truths -->
      {featuredTruths.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Featured Insights</h2>
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {featuredTruths.slice(0, 2).map((truth) => (
              <div key={truth.id} class="bg-white p-6 rounded-lg shadow border hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 mb-2">
                    Featured
                  </span>
                  <div class="flex items-center gap-2 text-sm text-gray-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    {truth.readingTime} min
                  </div>
                </div>
                <h3 class="text-xl font-semibold mb-2">
                  <a href={`/insights/truths/${truth.slug}`} class="hover:text-blue-600">{truth.title}</a>
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-3">{truth.description}</p>

                <div class="flex flex-wrap gap-2 mb-4">
                  {truth.procedureTags.slice(0, 2).map((tag) => (
                    <span key={tag} class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      {tag}
                    </span>
                  ))}
                  {truth.regionTags.slice(0, 2).map((tag) => (
                    <span key={tag} class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      {tag}
                    </span>
                  ))}
                </div>

                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-2 text-sm text-gray-500">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    {new Date(truth.publishedDate).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "numeric",
                      day: "numeric",
                      timeZone: "UTC",
                    })}
                  </div>
                  <a 
                    href={`/insights/truths/${truth.slug}`}
                    class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                  >
                    Read More
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}

      <!-- Filters -->
      <div class="bg-white rounded-lg shadow-sm border p-6 mb-8">
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
            </svg>
            <span class="font-medium text-gray-700">Filters:</span>
          </div>

          <select class="border border-gray-300 rounded-md px-3 py-2 text-sm">
            <option value="">All Categories</option>
            {categories.map(category => (
              <option key={category} value={category}>{category}</option>
            ))}
          </select>

          <select class="border border-gray-300 rounded-md px-3 py-2 text-sm">
            <option value="">All Regions</option>
            {allRegions.map((region) => (
              <option key={region} value={region}>{region}</option>
            ))}
          </select>

          <div class="ml-auto text-sm text-gray-600">
            {truths.length} insights found
          </div>
        </div>
      </div>

      <!-- Truths Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {truths.map((truth) => (
          <div key={truth.id} class="bg-white p-6 rounded-lg shadow border hover:shadow-lg transition-shadow h-full flex flex-col">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                {truth.readingTime} min read
              </div>
              {truth.featured && (
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                  Featured
                </span>
              )}
            </div>
            
            <h3 class="text-lg font-semibold mb-2 line-clamp-2">
              <a href={`/insights/truths/${truth.slug}`} class="hover:text-blue-600">{truth.title}</a>
            </h3>
            
            <div class="flex-1">
              <p class="text-gray-600 mb-4 line-clamp-3">{truth.description}</p>

              <div class="flex flex-wrap gap-1 mb-4">
                {truth.procedureTags.slice(0, 2).map((tag) => (
                  <span key={tag} class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                    {tag}
                  </span>
                ))}
                {truth.regionTags.slice(0, 1).map((tag) => (
                  <span key={tag} class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    {tag}
                  </span>
                ))}
              </div>
            </div>

            <div class="flex items-center justify-between mt-auto">
              <div class="flex items-center gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                {new Date(truth.publishedDate).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "numeric",
                  day: "numeric",
                  timeZone: "UTC",
                })}
              </div>
              <a 
                href={`/insights/truths/${truth.slug}`}
                class="inline-flex items-center px-3 py-1.5 border border-gray-300 text-sm font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                Read
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="mt-12 text-center">
        <div class="bg-blue-50 rounded-lg p-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">
            Want to explore your own healthcare costs?
          </h3>
          <p class="text-gray-600 mb-6">
            Use our tools to find transparent pricing and compare costs in your area.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a 
              href="/search-procedure"
              class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Search Procedures
            </a>
            <a 
              href="/tools/cost-calculator"
              class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Cost Calculator
            </a>
            <a 
              href="/hospitals"
              class="inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
            >
              Browse Hospitals
            </a>
          </div>
        </div>
      </div>
    </div>

    <FooterExpanded client:load />
  </div>
</BaseLayout>
