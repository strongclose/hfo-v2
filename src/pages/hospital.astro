---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Hospital Search - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Find Hospitals</h1>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-4">Hospital Search</h2>
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Hospital Name</label>
              <input 
                type="text" 
                placeholder="Search by name" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
              <input 
                type="text" 
                placeholder="City, State or ZIP" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Specialty</label>
              <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>All Specialties</option>
                <option>Cardiology</option>
                <option>Orthopedics</option>
                <option>Oncology</option>
                <option>Emergency Care</option>
              </select>
            </div>
            <div class="flex items-end">
              <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                Search Hospitals
              </button>
            </div>
          </div>
        </div>
        
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-4">Featured Hospitals</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold mb-2">Sample General Hospital</h3>
              <p class="text-gray-600 mb-3">123 Medical Center Dr, Healthcare City, HC 12345</p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-yellow-600">★★★★☆ 4.2</span>
                <span class="text-sm text-gray-500">2.5 miles</span>
              </div>
              <a href="/hospital-detail" class="text-blue-600 hover:text-blue-800 font-medium">
                View Details →
              </a>
            </div>
            
            <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold mb-2">Regional Medical Center</h3>
              <p class="text-gray-600 mb-3">456 Health Ave, Wellness Town, WT 67890</p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-yellow-600">★★★★★ 4.8</span>
                <span class="text-sm text-gray-500">4.1 miles</span>
              </div>
              <a href="/hospital-detail" class="text-blue-600 hover:text-blue-800 font-medium">
                View Details →
              </a>
            </div>
            
            <div class="bg-white border rounded-lg p-6 hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold mb-2">Community Hospital</h3>
              <p class="text-gray-600 mb-3">789 Care Blvd, Medical City, MC 54321</p>
              <div class="flex justify-between items-center mb-4">
                <span class="text-yellow-600">★★★★☆ 4.0</span>
                <span class="text-sm text-gray-500">6.7 miles</span>
              </div>
              <a href="/hospital-detail" class="text-blue-600 hover:text-blue-800 font-medium">
                View Details →
              </a>
            </div>
          </div>
        </div>
        
        <div class="text-center">
          <a href="/hospitals" class="bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors inline-block">
            View All Hospitals
          </a>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
