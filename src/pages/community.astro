---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Community - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">HealthFees Community</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Join thousands of healthcare consumers, researchers, and professionals working 
            together to make healthcare pricing transparent.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="bg-blue-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3 text-blue-900">Patient Stories</h3>
            <p class="text-blue-800 mb-4">
              Share your experiences with healthcare pricing and learn from others.
            </p>
            <a href="#" class="text-blue-600 hover:text-blue-800 font-medium">
              Read Stories →
            </a>
          </div>
          
          <div class="bg-green-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3 text-green-900">Research Collaboration</h3>
            <p class="text-green-800 mb-4">
              Connect with researchers studying healthcare pricing and transparency.
            </p>
            <a href="#" class="text-green-600 hover:text-green-800 font-medium">
              Join Research →
            </a>
          </div>
          
          <div class="bg-purple-50 rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3 text-purple-900">Data Contributors</h3>
            <p class="text-purple-800 mb-4">
              Help improve our database by contributing pricing information.
            </p>
            <a href="#" class="text-purple-600 hover:text-purple-800 font-medium">
              Contribute Data →
            </a>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-semibold mb-4">Join the Discussion</h2>
          <p class="text-gray-700 mb-6">
            Stay updated on healthcare price transparency initiatives and connect with like-minded individuals.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors text-center">
              Join Newsletter
            </a>
            <a href="#" class="bg-white text-blue-600 border border-blue-600 px-6 py-3 rounded-lg hover:bg-blue-50 transition-colors text-center">
              Community Forum
            </a>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
