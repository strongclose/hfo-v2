---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Join Waitlist - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Join the Waitlist</h1>
          <p class="text-xl text-gray-600">
            Be the first to know about new features, expanded coverage, and exclusive insights.
          </p>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-6 text-center">Get Early Access</h2>
          
          <form class="max-w-md mx-auto space-y-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email Address
              </label>
              <input 
                type="email" 
                id="email"
                name="email"
                required
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                placeholder="your.email@example.com"
              />
            </div>
            
            <div>
              <label for="interest" class="block text-sm font-medium text-gray-700 mb-2">
                What interests you most?
              </label>
              <select 
                id="interest"
                name="interest"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <option>Select your primary interest</option>
                <option>Personal healthcare cost planning</option>
                <option>Healthcare research and analysis</option>
                <option>Insurance plan comparison</option>
                <option>Provider price benchmarking</option>
                <option>Healthcare policy insights</option>
                <option>API access for developers</option>
              </select>
            </div>
            
            <div>
              <label for="role" class="block text-sm font-medium text-gray-700 mb-2">
                How would you describe yourself?
              </label>
              <select 
                id="role"
                name="role"
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <option>Select your role</option>
                <option>Patient/Healthcare Consumer</option>
                <option>Healthcare Researcher</option>
                <option>Healthcare Provider</option>
                <option>Insurance Professional</option>
                <option>Healthcare Journalist</option>
                <option>Policy Maker</option>
                <option>Healthcare Technology</option>
                <option>Other</option>
              </select>
            </div>
            
            <div>
              <label class="flex items-start">
                <input 
                  type="checkbox" 
                  required
                  class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                />
                <span class="ml-2 text-sm text-gray-700">
                  I agree to receive updates about HealthFees.org and understand I can 
                  unsubscribe at any time.
                </span>
              </label>
            </div>
            
            <div class="text-center">
              <button 
                type="submit"
                class="w-full bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
              >
                Join Waitlist
              </button>
            </div>
          </form>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Early Access</h3>
            <p class="text-gray-600">
              Be among the first to access new features and expanded data coverage.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2a2 2 0 00-2-2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Exclusive Insights</h3>
            <p class="text-gray-600">
              Receive special reports and analysis not available to the general public.
            </p>
          </div>
          
          <div class="text-center">
            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold mb-2">Shape the Future</h3>
            <p class="text-gray-600">
              Provide feedback to help us build features that matter most to you.
            </p>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
