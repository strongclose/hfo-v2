            </div>
            <input
              type="text"
              class="block w-full pl-12 pr-4 py-3 text-base border border-gray-300 rounded-xl bg-white shadow focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
              placeholder="Search any provider or payer..."
              id="transparency-search"
            >
          </div>
        </div>

        <!-- Filters Section -->
        <div class="bg-gray-50 rounded-xl p-4 mb-6">
          <div class="grid lg:grid-cols-6 gap-3">
            <!-- Entity Type -->
            <select class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
