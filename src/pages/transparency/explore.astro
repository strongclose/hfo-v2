              <option value="">All Sizes</option>
              <option value="large">Large System</option>
              <option value="medium">Medium System</option>
              <option value="small">Small Organization</option>
            </select>
            <select class="px-3 py-2 text-sm border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">All Scores</option>
              <option value="90-100">A+ (90-100)</option>
              <option value="85-89">A (85-89)</option>
              <option value="75-84">B (75-84)</option>
              <option value="65-74">C (65-74)</option>
              <option value="0-64">D (0-64)</option>
