            <select class="px-3 py-2 text-sm border border-gray-300 rounded-lg bg-white focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
              <option value="">All Status</option>
              <option value="compliant">Fully Compliant</option>
              <option value="partial">Partially Compliant</option>
              <option value="missing">Missing Files</option>
              <option value="outdated">Outdated Files</option>
