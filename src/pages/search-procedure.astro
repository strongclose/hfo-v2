---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Search Procedures - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Search Medical Procedures</h1>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Find and compare pricing for medical procedures across different providers and insurance plans.
          </p>
        </div>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-6">Procedure Search</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Procedure Name</label>
              <input 
                type="text" 
                placeholder="e.g., MRI, CT Scan, Surgery" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Body Part/System</label>
              <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                <option>All Body Parts</option>
                <option>Brain/Head</option>
                <option>Heart/Chest</option>
                <option>Abdomen</option>
                <option>Spine/Back</option>
                <option>Extremities</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
              <input 
                type="text" 
                placeholder="City, State or ZIP" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="flex items-end">
              <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                Search Procedures
              </button>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Imaging Procedures</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">MRI Scans</a></li>
              <li><a href="#" class="hover:text-blue-600">CT Scans</a></li>
              <li><a href="#" class="hover:text-blue-600">X-Rays</a></li>
              <li><a href="#" class="hover:text-blue-600">Ultrasounds</a></li>
              <li><a href="#" class="hover:text-blue-600">Mammograms</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Laboratory Tests</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Blood Work</a></li>
              <li><a href="#" class="hover:text-blue-600">Urinalysis</a></li>
              <li><a href="#" class="hover:text-blue-600">Genetic Testing</a></li>
              <li><a href="#" class="hover:text-blue-600">Pathology</a></li>
              <li><a href="#" class="hover:text-blue-600">Cultures</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Surgical Procedures</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Outpatient Surgery</a></li>
              <li><a href="#" class="hover:text-blue-600">Inpatient Surgery</a></li>
              <li><a href="#" class="hover:text-blue-600">Emergency Procedures</a></li>
              <li><a href="#" class="hover:text-blue-600">Specialist Surgery</a></li>
              <li><a href="#" class="hover:text-blue-600">Day Surgery</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Preventive Care</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Annual Checkups</a></li>
              <li><a href="#" class="hover:text-blue-600">Vaccinations</a></li>
              <li><a href="#" class="hover:text-blue-600">Screenings</a></li>
              <li><a href="#" class="hover:text-blue-600">Wellness Visits</a></li>
              <li><a href="#" class="hover:text-blue-600">Health Assessments</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Emergency Services</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Emergency Room</a></li>
              <li><a href="#" class="hover:text-blue-600">Urgent Care</a></li>
              <li><a href="#" class="hover:text-blue-600">Ambulance Services</a></li>
              <li><a href="#" class="hover:text-blue-600">Trauma Care</a></li>
              <li><a href="#" class="hover:text-blue-600">Critical Care</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-4">Specialty Procedures</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Cardiology</a></li>
              <li><a href="#" class="hover:text-blue-600">Orthopedics</a></li>
              <li><a href="#" class="hover:text-blue-600">Oncology</a></li>
              <li><a href="#" class="hover:text-blue-600">Neurology</a></li>
              <li><a href="#" class="hover:text-blue-600">Gastroenterology</a></li>
            </ul>
          </div>
        </div>
        
        <div class="bg-gray-50 rounded-lg p-8">
          <h2 class="text-2xl font-semibold mb-4">How to Use Procedure Search</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-4">
                1
              </div>
              <h3 class="font-semibold mb-2">Search</h3>
              <p class="text-gray-600">
                Enter the procedure name or browse by category to find what you need.
              </p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-4">
                2
              </div>
              <h3 class="font-semibold mb-2">Compare</h3>
              <p class="text-gray-600">
                View pricing across different providers and insurance plans in your area.
              </p>
            </div>
            <div class="text-center">
              <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center text-white font-bold text-xl mx-auto mb-4">
                3
              </div>
              <h3 class="font-semibold mb-2">Decide</h3>
              <p class="text-gray-600">
                Make informed decisions based on cost, quality, and convenience factors.
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
