---
import Layout from '../layouts/BaseLayout.astro';
import { Navigation } from '../components/Navigation';
import { FooterExpanded } from '../components/homepage/FooterExpanded';
---

<Layout title="Hospital Procedures - HealthFees.org">
  <div class="min-h-screen bg-white">
    <Navigation client:load />
    
    <main class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Hospital Procedures</h1>
        
        <div class="bg-blue-50 rounded-lg p-8 mb-8">
          <h2 class="text-2xl font-semibold mb-4">Find Procedure Pricing by Hospital</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Procedure</label>
              <input 
                type="text" 
                placeholder="e.g., MRI, CT Scan, Surgery" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Hospital</label>
              <input 
                type="text" 
                placeholder="Hospital name or location" 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              />
            </div>
            <div class="flex items-end">
              <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                Search Procedures
              </button>
            </div>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3">Imaging Procedures</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">MRI Scans</a></li>
              <li><a href="#" class="hover:text-blue-600">CT Scans</a></li>
              <li><a href="#" class="hover:text-blue-600">X-Rays</a></li>
              <li><a href="#" class="hover:text-blue-600">Ultrasounds</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3">Laboratory Tests</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Blood Work</a></li>
              <li><a href="#" class="hover:text-blue-600">Urinalysis</a></li>
              <li><a href="#" class="hover:text-blue-600">Genetic Testing</a></li>
              <li><a href="#" class="hover:text-blue-600">Pathology</a></li>
            </ul>
          </div>
          
          <div class="bg-white border rounded-lg p-6">
            <h3 class="text-lg font-semibold mb-3">Surgical Procedures</h3>
            <ul class="space-y-2 text-gray-600">
              <li><a href="#" class="hover:text-blue-600">Outpatient Surgery</a></li>
              <li><a href="#" class="hover:text-blue-600">Emergency Procedures</a></li>
              <li><a href="#" class="hover:text-blue-600">Specialist Surgery</a></li>
              <li><a href="#" class="hover:text-blue-600">Day Surgery</a></li>
            </ul>
          </div>
        </div>
      </div>
    </main>
    
    <FooterExpanded client:load />
  </div>
</Layout>
