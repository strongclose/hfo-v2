---
// Astro component script
---

<script>
  // Client-side navigation logic
  let isMobileMenuOpen = false;
  let isHomepage = false;
  let isScrolled = true;
  let isVisible = true;
  let lastScrollY = 0;

  function updateNavigation() {
    isHomepage = window.location.pathname === "/";
    
    const currentScrollY = window.scrollY;
    const nav = document.querySelector('[data-navigation]');
    
    if (!nav) return;

    if (isHomepage) {
      const heroHeight = window.innerHeight;
      const whyMattersStart = heroHeight;
      const whoUsesStart = whyMattersStart + 800;
      const dataShowsStart = whoUsesStart + 800;

      if (currentScrollY < whyMattersStart) {
        isScrolled = false;
      } else if (currentScrollY >= whyMattersStart && currentScrollY < whoUsesStart) {
        isScrolled = true;
      } else if (currentScrollY >= whoUsesStart && currentScrollY < dataShowsStart) {
        isScrolled = false;
      } else {
        isScrolled = true;
      }
    } else {
      isScrolled = true;
    }

    if (currentScrollY > 100) {
      if (currentScrollY > lastScrollY && currentScrollY > 300) {
        isVisible = false;
      } else if (currentScrollY < lastScrollY) {
        isVisible = true;
      }
    } else {
      isVisible = true;
    }

    // Update classes
    nav.className = `fixed top-0 left-0 right-0 z-50 px-8 py-3 backdrop-blur-md transition-all duration-500 border-b ${
      isScrolled ? "border-gray-200/20 bg-white/80" : "border-white/10 bg-white/5"
    }`;
    
    nav.style.transform = isVisible ? "translateY(0)" : "translateY(-100%)";
    
    // Update logo and text colors
    const logoSpans = nav.querySelectorAll('[data-logo-text]');
    logoSpans.forEach(span => {
      if (span.dataset.logoText === 'health' || span.dataset.logoText === 'org') {
        span.className = 'text-teal-400';
      } else {
        span.className = isScrolled ? 'text-gray-900' : 'text-white';
      }
    });
    
    // Update nav links
    const navLinks = nav.querySelectorAll('[data-nav-link]');
    navLinks.forEach(link => {
      link.className = `px-6 py-3 font-medium transition-all duration-300 text-base rounded-full hover:scale-105 inline-block ${
        isScrolled
          ? "text-gray-600 hover:text-white hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-600/25"
          : "text-white hover:text-white hover:bg-white/20 hover:backdrop-blur-sm hover:shadow-lg hover:shadow-white/10"
      }`;
    });

    lastScrollY = currentScrollY;
  }

  function toggleMobileMenu() {
    isMobileMenuOpen = !isMobileMenuOpen;
    const mobileMenu = document.querySelector('[data-mobile-menu]');
    const menuButton = document.querySelector('[data-mobile-button]');
    
    if (mobileMenu) {
      mobileMenu.style.display = isMobileMenuOpen ? 'block' : 'none';
    }
    
    if (menuButton) {
      menuButton.innerHTML = isMobileMenuOpen 
        ? '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>'
        : '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>';
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    updateNavigation();
    
    window.addEventListener('scroll', updateNavigation);
    window.addEventListener('popstate', updateNavigation);
    
    const mobileButton = document.querySelector('[data-mobile-button]');
    if (mobileButton) {
      mobileButton.addEventListener('click', toggleMobileMenu);
    }
    
    const logoButton = document.querySelector('[data-logo-button]');
    if (logoButton) {
      logoButton.addEventListener('click', () => {
        window.location.href = '/';
      });
    }
  });
</script>

<nav data-navigation class="fixed top-0 left-0 right-0 z-50 px-8 py-3 backdrop-blur-md transition-all duration-500 border-b border-gray-200/20 bg-white/80">
  <div class="max-w-7xl mx-auto relative">
    <!-- Logo -->
    <button data-logo-button class="absolute left-0 top-0 flex items-center space-x-3 hover:opacity-80 transition-opacity">
      <div class="relative">
        <svg class="w-10 h-10 transition-all" fill="#1E40AF" stroke="white" stroke-width="1" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="w-5 h-5 text-white" stroke="currentColor" stroke-width="2.5" fill="none" viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </div>
      </div>
      <span class="text-xl font-bold transition-colors text-gray-900">
        <span data-logo-text="health" class="text-teal-400">Health</span>
        <span data-logo-text="fees" class="text-gray-900">Fees</span>
        <span data-logo-text="org" class="text-teal-400">.org</span>
      </span>
    </button>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center justify-center space-x-2">
      <a data-nav-link href="/compare-prices" class="px-6 py-3 font-medium transition-all duration-300 text-base rounded-full hover:scale-105 inline-block text-gray-600 hover:text-white hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-600/25">
        Compare Prices
      </a>
      <a data-nav-link href="/insights" class="px-6 py-3 font-medium transition-all duration-300 text-base rounded-full hover:scale-105 inline-block text-gray-600 hover:text-white hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-600/25">
        Insights
      </a>
      <a data-nav-link href="/who-we-help" class="px-6 py-3 font-medium transition-all duration-300 text-base rounded-full hover:scale-105 inline-block text-gray-600 hover:text-white hover:bg-blue-600 hover:shadow-lg hover:shadow-blue-600/25">
        Who We Help
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button data-mobile-button class="absolute right-0 top-0 md:hidden transition-colors text-gray-900 hover:text-teal-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>

    <!-- Mobile Menu -->
    <div data-mobile-menu class="md:hidden mt-16 border rounded-lg backdrop-blur-md border-gray-200/20 bg-white/90" style="display: none;">
      <div class="px-6 py-4 space-y-3">
        <a href="/compare-prices" class="block w-full text-left font-medium py-2 text-gray-900">
          Compare Prices
        </a>
        <a href="/insights" class="block w-full text-left font-medium py-2 text-gray-900">
          Insights
        </a>
        <a href="/who-we-help" class="block w-full text-left font-medium py-2 text-gray-900">
          Who We Help
        </a>
      </div>
    </div>
  </div>
</nav>
